name: Merge Develop into Stage

on:
  push:
    branches:
      - develop
  schedule:
    - cron: '30 6 * * 3'
  workflow_dispatch:

jobs:
  merge-branches:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v2
        with:
          fetch-depth: 0
          ref: stage

      - name: Configure Git
        env:
          GIT_USER_EMAIL: ${{ secrets.GIT_USER_EMAIL }}
          GIT_USER_NAME: ${{ secrets.GIT_USER_NAME }}
        run: |
          git config --global user.email "${GIT_USER_EMAIL}"
          git config --global user.name "${GIT_USER_NAME}"

      - name: Create Pull Request
        if: github.event_name == 'push' && github.ref == 'refs/heads/develop'
        uses: peter-evans/create-pull-request@v3
        with:
          token: ${{ secrets.GITHUB_TOKEN }}
          commit-message: 'Merge develop into stage [skip ci]'
          branch: develop
          title: 'Merge develop into stage'
          labels: 'automerge'

      - name: Merge Pull Request
        if: github.event_name == 'schedule' && github.event.workflow_run.conclusion == 'success'
        run: |
          git fetch --no-tags --prune --depth=1 origin develop
          git merge FETCH_HEAD --allow-unrelated-histories --no-ff -m "Merging develop into stage [skip ci]"
          git push origin stage
